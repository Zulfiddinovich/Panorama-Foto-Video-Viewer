<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <uz.gita.panofotovideo.MonoscopicView
        android:id="@+id/media_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/videoUiContainer"
        tools:layout_editor_absoluteX="30dp">


        <ImageView
            android:id="@+id/open_video_gal_button"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_ripple"
            android:contentDescription=""
            android:padding="10dp"
            android:src="@drawable/ic_photo_video"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@id/videoUiContainer"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/network_button"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_ripple"
            android:contentDescription=""
            android:padding="14dp"
            android:src="@drawable/www"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@id/videoUiContainer"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/vr_button"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_ripple"
            android:contentDescription=""
            android:padding="14dp"
            android:src="@drawable/ic_vr_24"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@id/videoUiContainer"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/videoUiContainer"
        layout="@layout/video_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
